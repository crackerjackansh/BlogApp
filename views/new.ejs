<%- include ("partials/header") -%>
<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form action="/blogs" method="POST">
        <div class="ui form">
            <div class="field">
                <label>Name</label>
                <input type="text" name="blog[title]" placeholder="Name">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="Image link">
            </div>
            <div class="field">
                <label>Blog content</label>
                <textarea name="blog[body]"></textarea>
            </div>
            <input type="submit" class="ui violet basic button">
        </div>
        
        
    </form>
</div>




